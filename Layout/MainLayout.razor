@inherits LayoutComponentBase
@inject NavigationManager NavManager

<div class="main-navbar-layout">
    <nav class="top-nav">
        <div class="nav-left nav-brand">Christopher Smith</div>
        <div class="nav-right">
            <a href="/">Home</a>
            <a href="/resume">Resume</a>
            <a href="/projects">Projects</a>
            <a href="/experience">Experience</a>
            <a href="/contact">Contact</a>
            <button class="hamburger" @onclick="ToggleDrawer">☰</button>
        </div>
    </nav>

    <div class="backdrop @(isDrawerOpen ? "open" : "")" @onclick="CloseDrawer"></div>
    <div class="drawer drawer-slide @(isDrawerOpen ? "open" : "closed")">
        <a href="/" @onclick="CloseDrawer">Home</a>
        <a href="/resume" @onclick="CloseDrawer">Resume</a>
        <a href="/projects" @onclick="CloseDrawer">Projects</a>
        <a href="/experience" @onclick="CloseDrawer">Experience</a>
        <a href="/contact" @onclick="CloseDrawer">Contact</a>
    </div>

    <main class="main-content">
        <div class="content-container">
            <article class="content px-4">
                @Body
            </article>
        </div>
    </main>

    <footer class="footer-neon">
        <span>&copy; @DateTime.Now.Year Christopher Smith &mdash; Portfolio</span>
    </footer>
</div>

@code {
    private bool isDrawerOpen = false;

    private void ToggleDrawer() => isDrawerOpen = !isDrawerOpen;
    private void CloseDrawer() => isDrawerOpen = false;
}
