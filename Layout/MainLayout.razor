@inherits LayoutComponentBase
@inject NavigationManager NavManager

<div class="main-navbar-layout" style="background-color:#0a0a23; color:white;">
    <nav class="top-nav" style="position:fixed; top:0; width:100%; background-color:#0a0a23; z-index:1000;">
        <div class="nav-left">ResumeSite</div>
        <div class="nav-right">
            <a href="/" style="color:cyan;">Home</a>
            <a href="/resume" style="color:cyan;">Resume</a>
            <a href="/projects" style="color:cyan;">Projects</a>
            <a href="/experience" style="color:cyan;">Experience</a>
            <a href="/contact" style="color:cyan;">Contact</a>
            <button class="hamburger" @onclick="ToggleDrawer">☰</button>
        </div>
    </nav>

    <div class="backdrop" @onclick="CloseDrawer" style="@(isDrawerOpen ? "display:block;" : "display:none;")"></div>
    <div class="drawer @(isDrawerOpen ? "open" : "closed")" style="background-color:#0a0a23;">
        <a href="/" @onclick="CloseDrawer" style="color:cyan;">Home</a>
        <a href="/resume" @onclick="CloseDrawer" style="color:cyan;">Resume</a>
        <a href="/projects" @onclick="CloseDrawer" style="color:cyan;">Projects</a>
        <a href="/experience" @onclick="CloseDrawer" style="color:cyan;">Experience</a>
        <a href="/contact" @onclick="CloseDrawer" style="color:cyan;">Contact</a>
    </div>

    <main class="main-content" style="padding-top:60px; padding-bottom:60px;">
        <article class="content px-4">
            @Body
        </article>
    </main>

    <footer class="footer-neon" style="background-color:#0a0a23; neon-effect">
        <span>&copy; @DateTime.Now.Year Chris Doe &mdash; ResumeSite</span>
    </footer>
</div>

@code {
    private bool isDrawerOpen = false;

    private void ToggleDrawer() => isDrawerOpen = !isDrawerOpen;
    private void CloseDrawer() => isDrawerOpen = false;
}
